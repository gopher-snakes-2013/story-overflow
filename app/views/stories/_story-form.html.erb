<%= form_for @story, :html => {:id => 'story-form', :class => 'hidden'} do |f| %>
  Title:
  <br>
  <%=f.text_field :title %>
  <br>
  <br>

  Description:
  <br>
  <%= f.text_area :description %>
  <br>
  <br>

  Image URL:
  <br>
  <%=f.text_field :image_url %>
  <br>
  <br>
  <%# TODO-JW: See the stories_controller#create action for details. %>
  <%= f.hidden_field :user_id, value: current_user.id %>
  <div class="submit-button">
  <%=f.submit "Submit your story" %>
  </div>
<% end %>